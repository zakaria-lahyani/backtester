name: "{{ signal_name }}_{{ period }}_{{ timeframe }}"
timeframes: ["{{ timeframe }}"]

entry:
  long:
    mode: "all"
    conditions:
      - signal: "trend_{{ signal_name }}_{{ period }}"
        operator: "changes_to"
        value: "bullish"
        timeframe: "{{ timeframe }}"

exit:
  long:
    mode: "any"
    conditions:
      - signal: "trend_{{ signal_name }}_{{ period }}"
        operator: "changes_to"
        value: "bearish"
        timeframe: "{{ timeframe }}"

risk:
  position_sizing:
    type: "fixed"
    value: 1
    atr_distance: {{ atr_distance | float }}

  sl:
    type: "fixed"
    value: 10

  tp:
    type: "fixed"
    value: 1100.0
